    <script src="http://cdn.static.runoob.com/libs/angular.js/1.4.6/angular.min.js"></script>
    <style type="text/css"></style>
    <script>
        function showUser() {
            document.getElementById("user").style.display = "block";
            document.getElementById("quit").style.display = "block";

            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.display = "none";
        }

        function hiddenUser() {
            document.getElementById("user").style.display = "none";
            document.getElementById("quit").style.display = "none";

            document.getElementById("login").style.display = "block";
            document.getElementById("register").style.display = "block";
        }

        let classList;
        function hiddenList() {
            classList = document.getElementById("list").getAttribute("class");
            classList = classList.replace("active", "");
            document.getElementById("list").setAttribute("class", classList);
            classList = document.getElementById("map").getAttribute("class");
            classList = classList.concat(" active");
            document.getElementById("map").setAttribute("class", classList);
        }

        function showList() {
            classList = document.getElementById("map").getAttribute("class");
            classList = classList.replace("active", "");
            document.getElementById("map").setAttribute("class", classList);
            classList = document.getElementById("list").getAttribute("class");
            classList = classList.concat(" active");
            document.getElementById("list").setAttribute("class", classList);
        }

        let inputList;
        function checkInput() {
            inputList = document.getElementById("inputList").getElementsByTagName("input");
            for(var i = 0; i < inputList.length; i++){
                if(inputList[i].value.length === 0){
                    alert("请填写所有信息!");
                    inputList[i].focus();
                    return false;
                }
            }
            alert("提交完成!");
            $('#lostModal').modal('hide');
        }

        let formApp = angular.module('submitInput', []);
        formApp.controller('submitCtrl', function ($scope, $http) {
            $scope.lost = {};
            $scope.submitForm = function () {
                $http({
                    method:'POST',
                    url:'http://localhost:3001',
                    data:$.param($scope.lost),
                    headers:{
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                })
                    .success(function (data) {
                        console.log(data);
                    });
            };
        });

        function showInfo(id, image, type, time, content){
            let html = '<div class = "panel-body">' +
                '<img src =' + image + ' class = "img-responsive center-block"  style = "height : 300px">' +
                '</div>' +
                '<div class = "panel-body">' +
                '<div class = "caption">' +
                '<h4><b>' + type + '</b></h4>' +
                '<p><b>' + time + '</b></p>' +
                '<p>' + content + '</p>' +
                '</div>';
            '</div>'
            document.getElementById(id).innerHTML += html;
        }
    </script>
</head>


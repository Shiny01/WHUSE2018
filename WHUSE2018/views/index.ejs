                        <h4 class = "modal-title" id = "modalHeader">发布失物招领信息</h4>
                    </div>
                    <div class = "modal-body" ng-app = "submitInput" ng-controller = "submitCtrl">
                        <form id = "inputList" class="form-horizontal" role = "form" ng-submit = "submitForm">
                            <div class = "form-group">
                                <lable for = "phoneNumber" class = "col-md-4 control-label fa fa-phone"> 联系方式</lable>
                                <div class = "col-md-8 input-icon-group">
                                    <input type = "text" class = "form-control fc-clear" id = "phoneNumber" placeholder = "请输入联系方式" ng-model = "lost.phone">
                                </div>
                            </div>
                            <div class = "form-group">
                                <label for = "location" class = "col-md-4 control-label fa fa-map-marker"> 拾取位置</label>
                                <div class = "col-md-8">
                                    <input type = "text" class = "form-control" id = "location" placeholder = "请输入拾取失物的地点" ng-model = "lost.location">
                                </div>
                            </div>
                            <div class = "form-group">
                                <label for = "name" class = "col-md-4 control-label fa fa-at"> 物品名称</label>
                                <div class = "col-md-8">
                                    <input type = "text" class = "form-control" id = "name" placeholder = "请输入物品名称" ng-model = "lost.name">
                                </div>
                            </div>
                            <div class = "form-group">
                                <label for = "type" class = "col-md-4 control-label fa fa-navicon"> 物品类别</label>
                                <div class = "col-md-8">
                                    <select class = "form-control" ng-model = "lost.type">
                                        <option>校园卡</option>
                                        <option>现金</option>
                                        <option>生活物品</option>
                                        <option>学习资料</option>
                                        <option>电子产品</option>
                                    </select>
                                </div>
                            </div>
                            <div class = "form-group">
                                <label for = "content" class = "col-md-4 control-label fa fa-expand">   详细信息</label>
                                <div class = "col-md-8">
                                    <input type = "text" class = "form-control" id = "content" placeholder = "请输入物品简介" ng-model = "lost.content">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class = "modal-footer">
                        <button type = "button" class = "btn btn-default" data-dismiss = "modal">取消</button>
                        <button type = "button" class = "btn btn-primary" onclick = "checkInput()">发布</button>
                    </div>
                </div>
            </div>
        </div>


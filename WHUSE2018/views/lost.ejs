<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>失物招领</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://cdn.static.runoob.com/libs/angular.js/1.4.6/angular.min.js"></script>
    <style>
        .a-upload {
            padding: 4px 10px;
            line-height: 20px;
            position: relative;
            cursor: pointer;
            color: #888;
            background: #fafafa;
            border: 1px solid #ddd;
            border-radius: 4px;
            overflow: hidden;
            display: inline-block;
            *display: inline;
            *zoom: 1
        }

        .a-upload  input {
            position: absolute;
            font-size: 50px;
            right: 0;
            top: 0;
            opacity: 0;
            filter: alpha(opacity=0);
            cursor: pointer
        }

        .a-upload:hover {
            color: #444;
            background: #eee;
            border-color: #ccc;
            text-decoration: none
        }

        .newsFrame{
            padding: 20px;
            border-radius:15px;
            border:1px solid rgb(167,167,167);
        }

        .leftLabel-blue{
            margin-bottom: 20px;
            border-left: 10px solid cornflowerblue;
        }

        .img-offset{
            margin: 10px 20px;
        }

        .news-content-font{
            color: gray;
            font-size: 12px;
            margin-left: 5px;
        }

        .icon-color{
            color:dodgerblue;
        }
    </style>

    <script>
        //发布信息，并在发布之前检查发布信息时，提交的表单是否填写完全
        let publishApp = angular.module("publishApp", []);
        publishApp.controller("publishCtrl", ["$scope", "$http",
            function ($scope, $http) {
                $scope.publish = function () {
                    let s;

                    s = document.getElementById("infoType");
                    if (s.value === ""){
                        alert("请填写所有信息!");
                        s.focus();
                        return false;
                    }

                    s = document.getElementById("lostType");
                    if (s.value === ""){
                        alert("请填写所有信息!");
                        s.focus();
                        return false;
                    }

                    let inputList;
                    inputList = document.getElementById("inputList").getElementsByTagName("input");
                    for(let i = 0; i < inputList.length; i++){
                        if(inputList[i].value.length === 0){
                            alert("请填写所有信息!");
                            inputList[i].focus();
                            return false;
                        }
                    }

                    $http({
                        method:'post',
                        url:'/posts/add',
                        data: {
                            newpost: {
                                title: document.getElementById("lostType").value,
                                content: document.getElementById("content").value,
                                type: document.getElementById("infoType").value,
                                postinfo:
                                    {
                                        date: document.getElementById("time").value,
                                        image: document.getElementById("image").value
                                    }
                            }
                        }
                    }).then(
                        function success(res) {
                            alert(JSON.stringify(res));
                        }
                    )
                }
            }])

        //根据传入的参数，构造失物招领信息卡片
        function showLostContent(id, color, image, title, time, content){
            let html =
                "<div class = " + color + ">" +
                "<div class = 'row clearfix'>" +
                "<div class = 'col-md-3 column'>" +
                "<img src = " + image + " class = 'img-thumbnail img-offset'>" +
                "</div>" +
                "<div class = 'col-md-8 column'>" +
                "<h5>" + title + "</h5>" +
                "<h6>&nbsp;" + time + "</h6>" +
                "<p class = 'news-content-font'>" + content + "</p>" +
                "</div>" +
                "</div>"
            document.getElementById(id).innerHTML = html;
            document.getElementById(id).style.display = "block";
        };

        $(document).ready(function () {
            showLostContent("lost-content-1", "leftLabel-blue", "/images/0001.jpg", "校园卡", "18:42 03/01/2018", "学号为2015302580173，在信息学部二食堂南门处捡到，失主请联系我，联系方式为：18727490925");
            showLostContent("lost-content-2", "leftLabel-blue", "/images/0001.jpg", "校园卡", "18:42 03/01/2018", "学号为2015302580173，在信息学部二食堂南门处捡到，失主请联系我，联系方式为：18727490925");
            showLostContent("lost-content-3", "leftLabel-blue", "/images/0001.jpg", "校园卡", "18:42 03/01/2018", "学号为2015302580173，在信息学部二食堂南门处捡到，失主请联系我，联系方式为：18727490925");
        })

        let searchApp = angular.module("searchApp", []);
        searchApp.controller("searchCtrl", ["$scope", "$http",
            function ($scope, $http) {
                $scope.search = function () {
                    $http({
                        method:'post',
                        url:window.location.href,
                        data: {
                            text: document.getElementById("search").value
                        }
                    })
                }
            }]).then(
            function success(res) {
                let resultArray = res.data.result;
                let curResult;
                curResult = resultArray[0];
                showInfo("info1", curResult.postinfo.image, curResult.title, curResult.postinfo.date, curResult.content);
                curResult = resultArray[1];
                showInfo("info2", curResult.postinfo.image, curResult.title, curResult.postinfo.date, curResult.content);
                curResult = resultArray[2];
                showInfo("info3", curResult.postinfo.image, curResult.title, curResult.postinfo.date, curResult.content);
            }
        )
    </script>
</head>

<body>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <nav class="navbar navbar-default" role="navigation">
                <!--Logo,跳转到首页-->
                <div class="col-md-4 navbar-header">
                    <a class = "navbar-brand fa fa-smile-o fa-lg" href="/">&nbsp iManager</a>
                    <!--页面导航，返回主页或者跳到失物招领页，首页即为当前页面-->
                    <ul class="nav navbar-nav">
                        <li><a href="/">返回主页</a></li>
                        <li class="active"><a href="/lost">失物招领</a></li>
                    </ul>
                </div>
                <!--页面功能导航-->
                <div class="col-md-8">
                    <!--失物招领页面内导航，点击发布，跳出对应的模态框；点击列表，切换为列表视图；点击地图，切换为地图视图-->
                    <div class = "col-md-5">
                        <button id = "publish" type = "button" class = "btn btn-default navbar-btn navbar-middle" data-toggle = modal data-target = #lostModal>
                            <span class = "fa fa-edit">&nbsp发布</span>
                        </button>&nbsp&nbsp&nbsp
                        <button id = "list" type = "button" class = "btn btn-default navbar-btn navbar-middle active" onclick = "map2list('list', 'map')">
                            <span class = "fa fa-list-ul">&nbsp列表</span>
                        </button>&nbsp&nbsp&nbsp
                        <button id = "map" type = "button" class = "btn btn-default navbar-btn navbar-middle" onclick = "map2list('map', 'list')">
                            <span class = "fa fa-map-o">&nbsp地图</span>
                        </button>
                    </div>

                    <!--发布失物招领的模态框-->
                    <div class = "modal fade" id = "lostModal" tabindex = "-1" role = "dialog" aria-labelledby = "lostModalLabel" aria-hidden = "true">
                        <div class = "modal-dialog">
                            <div class = "modal-content" ng-app="publishApp" ng-controller="publishCtrl">

                                <!--模态框标题，提供模态框的关闭按钮-->
                                <div class = "modal-header">
                                    <button type = "button" class = "close" data-dismiss = "modal" aria-hidden = "true">&times;</button>
                                    <h4 class = "modal-title" id = "modalHeader">发布失物招领信息</h4>
                                </div>

                                <!--模态框内容,为一个表单-->
                                <div class = "modal-body">
                                    <form id = "inputList" class="form-horizontal" role = "form">

                                        <!--信息类别-->
                                        <div class = "form-group">
                                            <label for = "infoType" class = "col-md-4 control-label fa fa-sort-amount-asc">&nbsp&nbsp信息类别</label>
                                            <div class = "col-md-8">
                                                <select id = infoType class = "form-control">
                                                    <option value = "">请选择</option>
                                                    <option value = "寻找失主">寻找失主</option>
                                                    <option value = "失物招领">失物招领</option>
                                                </select>
                                            </div>
                                        </div>

                                        <!--物品类别-->
                                        <div class = "form-group">
                                            <label for = "lostType" class = "col-md-4 control-label fa fa-navicon">&nbsp&nbsp物品类别</label>
                                            <div class = "col-md-8">
                                                <select id = lostType class = "form-control">
                                                    <option value = "">请选择</option>
                                                    <option value = "校园卡">校园卡</option>
                                                    <option value = "现金">现金</option>
                                                    <option value = "生活物品">生活物品</option>
                                                    <option value = "学习资料">学习资料</option>
                                                    <option value = "电子产品">电子产品</option>
                                                </select>
                                            </div>
                                        </div>

                                        <!--丢失时间-->
                                        <div class = "form-group">
                                            <label for = "time" class = "col-md-4 control-label fa fa-at">&nbsp&nbsp丢失时间</label>
                                            <div class = "col-md-8">
                                                <input id = "time" type = "text" class = "form-control" placeholder = "请输入时间">
                                            </div>
                                        </div>

                                        <!--具体内容-->
                                        <div class = "form-group">
                                            <label for = "content" class = "col-md-4 control-label fa fa-expand">&nbsp&nbsp详细信息</label>
                                            <div class = "col-md-8">
                                                <input id = "content" type = "text" class = "form-control" placeholder = "请输入物品简介">
                                            </div>
                                        </div>

                                        <!--上传图片-->
                                        <div class = "form-group">
                                            <lable for = "image" class = "col-md-4 control-label fa fa-image">&nbsp&nbsp上传图片</lable>
                                            <div class = "col-md-8 input-icon-group">
                                                <a href="javascript:" class="a-upload">
                                                    <input type="file" name="" id="image">点击这里上传文件
                                                </a>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                                <div class = "modal-footer">
                                    <button type = "button" class = "btn btn-default" data-dismiss = "modal">取消</button>
                                    <button type = "button" class = "btn btn-primary" ng-click= "publish()">发布</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--搜索栏，点击搜索，显示匹配的信息-->
                    <div class = "col-md-4">
                        <div class = "input-group input-group-lg" ng-app="searchApp" ng-controller="searchCtrl">
                            <input id = "search" type = "text" class = "form-control" title="搜索">
                            <span class = "input-group-btn"><button class = "btn btn-default" type = "button" ng-click="search()">搜索</button></span>
                        </div>
                    </div>

                    <!--登录相关按钮-->
                    <ul class = "nav navbar-nav navbar-right">
                        <li style = "display: block" id = "login"  data-toggle="modal" data-target="#loginModal"><a><span class = "fa fa-sign-in">&nbsp&nbsp登录</span></a></li>
                        <li style = "display: block" id = "register" data-toggle="modal" data-target="#registerModal"><a><span class = "fa fa-pencil">&nbsp&nbsp注册</span></a></li>
                        <li style = "display: none" id = "user"><a><span class = "fa fa-user">&nbsp&nbsp用户</span></a></li>
                        <li style = "display: none" id = "quit"><a><span class = "fa fa-sign-out">&nbsp&nbsp退出</span></a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-offset-2 col-md-8">
            <!--日期、天气信息,给用户打个招呼-->
            <div class="row clearfix" style="margin-bottom: 15px;">
                <div class="col-md-7 column">
                    <h4>18:42 星期五 3月23日 &nbsp;</h4>
                </div>
            </div>

            <div class="content newsFrame" id="lost-content-1" style="display: none">
            </div>
            &nbsp;
            <div class="content newsFrame" id="lost-content-2" style="display: none">
            </div>
            &nbsp;
            <div class="content newsFrame" id="lost-content-3" style="display: none">
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <ul class="pager">
                <li class="previous"><a href="#">&larr; 上一页</a></li>
                <li class="next"><a href="#">下一页 &rarr;</a></li>
            </ul>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>
</body>
</html>